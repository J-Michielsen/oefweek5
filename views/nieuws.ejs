<% include header %>
<a name="top"></a>
<h1>IGN News</h1>

  <h3><a href="/">← Home</a></h3>
<section>
    <h2>
      <%- item.titel %>
    </h2>
    <img src="/img/<%- item.afbeeldingl %>" alt="<%- item.titel %>">

    <p class="datum"><%- item.datum %></p>

    <p>
      <%- item.body %>
    </p>

    <p class="gepost">Gepost in categorieën:

      <% for (var i = 0; i < item.categorieen.length; i++) { %>
        <a class="cat" href="/categorieen/<%- i %>"><%- item.categorieen[i] %></a><% if (i+1< item.categorieen.length){ %>, <% } %>
      <% } %>
    </p>
    <p class="source">Source: <%- item.source %></p>
</section>

<% include footer %>
